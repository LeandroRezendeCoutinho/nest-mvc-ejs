<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
</head>

<body>
  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% if ((typeof(posts) != undefined) || (posts != null)){ %>
    <tbody>
      <% posts.forEach(post => { %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
      <% }) %>
    </tbody>
    <% } %>
  </table>

</body>

</html>